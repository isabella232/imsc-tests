<?xml version="1.0" encoding="UTF-8"?>
<tt xmlns:tt="http://www.w3.org/ns/ttml"
    xmlns:ttp="http://www.w3.org/ns/ttml#parameter"
    xmlns="http://www.w3.org/ns/ttml"
    xmlns:tts="http://www.w3.org/ns/ttml#styling"
    xmlns:ttm="http://www.w3.org/ns/ttml#metadata"
    ttp:contentProfiles="http://www.w3.org/ns/ttml/profile/imsc1.1/text"
    xml:lang="en">
  <head>
    <metadata>
      <ttm:desc>#length-root-container-relative in region extent and origin</ttm:desc>
    </metadata>
    <layout>
      <region xml:id="r1" tts:backgroundColor="black" tts:color="white" tts:origin="50rw 50rh" tts:extent="50rw 50rh"/>
    </layout>
  </head>
  <body>
    <div region="r1">
      <p begin="0s" end="1s">
        tts:origin="50rw 50rh"<br/>tts:extent="50rw 50rh"
      </p>
    </div>
  </body>
</tt>
